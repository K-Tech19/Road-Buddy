<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/_head') %>
    <link rel="stylesheet" href="styles/signup.css" />
  </head>
  <body>
    <!-- <%- include('../partials/_navbar') %> -->
    <main>
      <section>
        <div class="signupImageContainer">
          <img src="..." class="img-thumbnail signupimage" alt="..." />
        </div>
        <div class="accountFormContainer">
          <form action="/signup" method="POST" class="form-control">
            <% if (typeof error !== "undefined") { %>
            <p><%= error.message %></p>
            <% } %>
            <div>
              <div>
                <input
                  class="formInput"
                  type="email"
                  name="email"
                  placeholder="Email*"
                  required
                />
              </div>
              <div>
                <input
                  class="formInput"
                  type="text"
                  name="phone"
                  placeholder="Phone*"
                />
              </div>
              <input
                class="formInput"
                type="text"
                name="username"
                placeholder="Username*"
                required
              />
            </div>
            <div>
              <input
                class="formInput"
                type="password"
                name="password"
                placeholder="Password*"
                required
              />
            </div>
            <div>
              <input
                class="formInput"
                type="password"
                name="password"
                placeholder="Confirm Password*"
                required
              />
            </div>
            <div class="buttonContainer">
              <button class="btn btn-primary createAccountButton" type="submit">
                Next
              </button>
              <button class="btn btn-primary createAccountButton" type="submit">
                Back
              </button>
            </div>
          </form>
        </div>
      </section>
    </main>
  </body>
</html>
